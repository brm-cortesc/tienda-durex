.membresia
	cursor pointer
	min-height 60rem
	padding 0.5rem 2rem !important
	transitionBase(0.3s)
	
	&:hover
		background-color $Gris
		box-shadow 3px 3px 4px 4px rgba(0,0,0,0.15)
		
		.select-radio
			&:before
				content "\e90e"

	h2
		color #000
		font-family $AvenirB
		font-size 2.2rem
		text-align center
		text-transform uppercase
		
	.img-responsive
		display block
		margin 2rem auto
		// max-width 14rem
	
	
	&-condones
		display none
		margin-top 3rem
		
		h3
			color #000
			font-family $AvenirR
			font-size 1.4rem
			margin-bottom 2rem
			text-align center
			text-transform uppercase
			position relative
			
			&:after
				background-color $AzulOscuro
				bottom -0.5rem 
				content ""
				height 0.3rem
				left 40% 
				position absolute
				width 20%
				


		.condon
			display inline-block
			margin-bottom 4rem
			margin-left 0.8rem
			margin-right @margin-left
			text-align center
			max-width 30%
			
			img
				display block
				height auto
				margin-bottom 1rem
				max-width 100%

			.badge
				background-color $AzulClaro !important
				
			.cantidad-condon
				background-color $AzulClaro
				border none
				border-radius 10px
				color #fff
				display inline-block
				font-size 1.2rem
				font-weight 700
				line-height 1
				max-width 2.8rem
				outline 0 !important
				outline none !important
				padding 3px 7px
				text-align center
				vertical-align baseline
				white-space nowrap
				
				&::-webkit-input-placeholder
					color #fff
					
				&::-moz-placeholder
					color #fff
					
				&::-moz-placeholder 
					color #fff
					
				&:-ms-input-placeholder
					color #fff


		.condones
			display block
			margin 4rem auto 0
			max-width 21rem
			

	&-desc
		border-top 1px solid $AzulOscuro	
		color #000
		font-size 1.4rem
		margin 1rem auto
		max-width 16rem
		padding 1rem 0.5rem
		text-align center
		

	&-precio
		color $AzulOscuro
		font-family $AvenirM
		font-size 2.3rem
		text-align center
		

	&-active
		background-color $Gris
		box-shadow 3px 3px 4px 4px rgba(0,0,0,0.15)
		
		.select-radio
			&:before
				content "\e90e"
			
		.membresia-condones
			display block


.select-radio
	color $AzulClaro
	display block
	font-family 'tienda-durex' !important
	font-size 3.9rem
	font-style normal
	font-variant normal
	font-weight normal
	line-height 1
	margin 1rem auto
	speak none
	text-transform none
	width 4rem
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

	&:before
		content "\e90f"
		
