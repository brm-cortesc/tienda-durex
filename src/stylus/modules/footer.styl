footer
	color #fff
	display block
	padding-top 4rem !important
	position relative
	
	.legal
		font-family $AvenirL
		font-size 0.8rem
		
	
	.logo
		height auto
		left 46.5%
		pointer-events none !important
		position absolute
		top -4rem
		width 7%
		z-index 2
		
	.footer-social-link
		margin-top 2.6rem
		text-align center
		
		a
			display inline-block
			font-size 2.8rem
			margin-left 0.4rem
			margin-right @margin-left

			&:hover
				text-decoration none !important

	.text-center
		font-family $AvenirL
		font-size 1rem
		
		a
			display inline-block
			margin-left 0.8rem
			margin-right @margin-left
			
