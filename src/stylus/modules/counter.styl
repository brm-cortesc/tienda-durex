.counter
	animation-delay 0.5s
	path("bg-wood.jpg")
	background-size 100%
	border-radius 5px
	box-shadow 0px 0px 10px 0px rgba(0, 0, 0, 0.75)
	margin 0 auto
	max-width 34rem
	padding 0.5rem
	

	.hashtag
		margin 1rem auto
		display block
		max-width 13.4rem
	
	.num
		background-color $Cafe
		border 2px solid #000
		box-shadow 0px 10px 10px 0px rgba(0, 0, 0, 0.75)
		color $Ocre
		display inline-block
		font-family $Hammer
		font-size 5rem
		margin-left 0.1rem
		margin-right @margin-left
		height 7.5rem
		overflow hidden
		padding-left @margin-left
		padding-right @margin-left
		position relative
		text-align center
		vertical-align middle
		
		&:after, &:before
			content ''
			height 2.3rem
			left 0
			position absolute
			right 0
			width 100%
			z-index 10
			
		&:after
			background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)
			bottom -1px
			
		&:before
			background linear-gradient(to bottom, rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%)
			top 0
		

		&:nth-child(2)
			div
				animation-delay 0.2s
			
		&:nth-child(3)
			div
				animation-delay 0.4s
			
		&:nth-child(4)
			div
				animation-delay 0.6s	
			
		&:nth-child(5)
			div
				animation-delay 0.8s	
			
		&:nth-child(6)
			div
				animation-delay 1s	
			
		&:nth-child(7)
			div
				animation-delay 1.2s
			
			
		
		span
			display block
			line-height 4.4rem
			transitionBase(0.3s)
			// margin-top 1rem
			
	.numeros
		display block
		margin 1rem auto
		width 92%
		
		span:nth-child(1)
			margin-top -3.3rem
		

