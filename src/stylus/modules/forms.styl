#age
	path("bg-wood.jpg")
	border-radius 5px
	box-shadow 0px 0px 10px 0px rgba(0, 0, 0, 0.75)
	padding 0.2rem 1rem
	text-align center
	
	input
		background-color #000
		border 1px solid #fff
		font-family $Hammer
		font-size 3.8rem
		padding 0.5rem
		text-align center
		text-transform uppercase
		transitionBase(0.3s)
		width 100%
		

		&:focus
			background-color #474d5a
			border-color $Amarillo
			outline 0 !important
			outline none !important
		
		&::-webkit-input-placeholder
			color #fff
			
		&::-moz-placeholder
			color #fff
			
		&::-moz-placeholder 
			color #fff
			
		&:-ms-input-placeholder
			color #fff
			
		&[type="checkbox"]
			width auto !important
			

	.input
		display inline-block
		margin-left 0.5rem
		margin-right @margin-left
		vertical-align middle
		
	.aaaa
		width 46%
		

	.checkbox
		cursor pointer		

	.dd
		margin-left 1rem
		width 20%
		
	.mm
		width 20%
		

		
#registro
	path("bg-wood.jpg")
	border-radius 5px
	box-shadow 0px 0px 10px 0px rgba(0, 0, 0, 0.75)
	padding 1.4rem 3rem
	margin-bottom 3rem
	text-align center
	
	label
		display inline-block
		height 0 !important
		margin 0 !important
		text-indent -99999rem
		width @height
	
	
	p
		font-size 1.6rem
		margin 0 auto
		max-width 65%

	.cedula
		
		input.form-control
			display inline-block
			vertical-align middle
			width 78%
		select.form-control
			display inline-block
			vertical-align middle
			width 20%

	.checkbox
		color #fff
		margin 1rem auto
		max-width 22rem
		
		a
			color #fff
			text-decoration underline
			
		label
			display inline !important
			height auto !important
			text-indent 0 !important
			width @height
	
	.form-control
		background-color #000
		border 1px solid #555555
		color #494949
		font-family $Hammer
		font-size 2.2rem
		height 4.6rem
		letter-spacing -0.1rem
		padding 2.2rem 1rem
		text-transform uppercase
		transitionBase(0.3s)
		width 100%
		

		&:focus
			border-color #fff
			color #fff
			outline 0 !important
			outline none !important
			

			&::-webkit-input-placeholder
				color #fff
				
			&::-moz-placeholder
				color #fff
				
			&::-moz-placeholder 
				color #fff
				
			&:-ms-input-placeholder
				color #fff
				
				label
					display none !important
		
		&::-webkit-input-placeholder
			color #494949
			
		&::-moz-placeholder
			color #494949
			
		&::-moz-placeholder 
			color #494949
			
		&:-ms-input-placeholder
			color #494949
			
		&[type="checkbox"]
			color #fff
			width auto !important
	
	.form-group
		margin 1rem auto
				
	select.form-control
		cursor pointer

#enviarTweet
	textarea
		background-color transparent
		border none
		color $Azul
		margin-bottom 2rem
		min-height 9rem
		outline 0 !important
		overflow auto
		padding 0.5rem
		resize none
		text-align left
		transitionBase(0.3s)
		width 100%
		

		&:focus
			// background-color $Azul
			color #fff
			
			&::-webkit-input-placeholder
				color #fff
				
			&::-moz-placeholder
				color #fff
				
			&::-moz-placeholder 
				color #fff
				
			&:-ms-input-placeholder
				color #fff
			

		&::-webkit-input-placeholder
			color $Azul
			
		&::-moz-placeholder
			color $Azul
			
		&::-moz-placeholder 
			color $Azul
			
		&:-ms-input-placeholder
			color $Azul

	.bottom
		p, button
			display inline-block
			vertical-align middle
			width 32%
			
		p
			font-family $Hammer
			text-transform uppercase
			
	.form-group
		background-color #16022c
		border 1px solid #555555
		color $Azul
		margin-bottom 2rem
		min-height 9rem
		position relative
		transitionBase(0.3s)
		
		&:focus
			background-color $Azul
			color #fff
			
			textarea
				// background-color $Azul
				color #fff
				
				&::-webkit-input-placeholder
					color #fff
					
				&::-moz-placeholder
					color #fff
					
				&::-moz-placeholder 
					color #fff
					
				&:-ms-input-placeholder
					color #fff
					
	
	.subir
		bottom 0.5rem
		cursor pointer
		display block 
		height 2rem
		position absolute
		right @bottom
		width @height
		
		img, input
			position absolute
			width 100%
			
		img
			cursor pointer
			height 100%
			z-index 0
		
		input
			cursor pointer
			opacity 0
			z-index 1
			
			

