header
	color #fff
	padding 0 !important
	
	a
		color #fff

	.azul-oscuro		
		p
			margin 0 !important
			

	.cart
		position relative
		.badge
			background-color $AzulOscuro !important
			font-size 0.6rem
			position absolute
			top -0.5rem
			text-align center
			right 0
			width 0.6rem
			
		.icon
			font-size 1.2rem
			margin-right 1rem


	.mini-login, .mini-cart
		background-color #fff
		box-shadow 1px 3px 4px 4px rgba(0,0,0,0.15)
		text-align left
		padding 1rem
		position absolute
		width 18.5rem
		z-index 5
		

	.mini-cart
		
				
		.btn
			margin-top 1rem
			margin-left 0.25rem
			margin-right @margin-left
			padding 0.6rem
			width 45%
			
			&-cart
				background-color $AzulClaro
				
				&:hover
					background-color darken(@background-color, 40%)
					color #fff
				
			&-pay
				background-color $AzulOscuro
				
				&:hover
					background-color lighten(@background-color, 40%)
					color #fff
	
		.mini-producto
			padding 0.5rem 0
			border-bottom 1px solid darken($Gris, 50%)
			
			.info, .img-responsive
				display	inline-block
				vertical-align top
				
			.info
				color #000
				
				
				h3
					color #000
					font-size 1.1rem
					margin 1rem 0 0.5rem

				.precio
					font-family $AvenirL
					font-size 1.2rem
					margin-bottom 0.2rem
					margin-top 1rem
					
				.remove
					color #000
					
			.img-responsive
				width 40%
				

	.mini-login
		a
			color $AzulOscuro
			display block
			font-size 1rem
			text-align center

		label
			color #000
			font-size 1rem
			font-family $AvenirH
			text-transform uppercase
			
		input
			background-color rgba($AzulOscuro, 0.4)
			box-shadow none
			

		.btn
			background-color $AzulClaro
			font-size 1.1rem
			// max-width 10rem
			padding 0.6rem
			margin-right 0.2rem
			width 100%
			
		.form-group
			display block
			margin-bottom 1rem
			width 100%
		
		
	
	.perfil, .status-cart
		display inline-block
		font-size 1.2rem
		vertical-align middle
		

	.status-cart
		.cart, .help-text
			display inline-block
			vertical-align middle
			width 48%
	
	.user-tools
		margin-top 1rem !important
		padding-right 3.4rem !important
		position relative
		text-align right
