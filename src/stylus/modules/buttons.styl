.btn
	background-color $Gris
	border-radius 5px
	color #fff
	display inline-block
	font-family $AvenirL 
	font-size 1.1rem
	padding 0.6rem 2.5rem
	text-transform uppercase
	transitionBase(0.2s)
	
	&-add-cart
		background-color $AzulOscuro
		
		&:hover
			background-color lighten(@background-color, 40%)
			color #fff !important

	&-checkout
		background-color rgba($AzulClaro, 0.9)
		font-size 1.6rem
		margin-top 4rem
		
	&-ir
		background-color $AzulClaro
		font-size 1.7rem
	
	&-go-checkout
		background-color $AzulClaro
		display block
		font-size 2rem
		padding 1rem 0rem
		margin 5rem auto 9rem
		text-transform uppercase
		max-width 27.6rem
	
	&-more
		background-color $AzulClaro
		
		&:hover
			background-color darken(@background-color, 40%)
			color #fff !important

	

	&-submit
		background-color $AzulClaro
		color #fff
		display block
		margin 1rem auto
		// max-width 10rem
			

	&-submit-contact
		background-color $AzulClaro