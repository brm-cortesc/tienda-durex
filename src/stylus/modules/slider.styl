.carousel
	padding 0 !important
	
	
	.btn
		background-color rgba(#fff, 0.9)
		color #000
		display block
		font-family $AvenirL  
		max-width 21.4rem
		padding-left 1rem
		padding-right @padding-left
		text-transform uppercase

	&-caption
		left 10% !important
		width 80%
		
		h2
			color #fff
			font-size 6rem
			font-weight $AvenirM
			text-align left
			text-shadow none 
			

		.descripcion
			color #fff
			font-size 2rem
			text-align left
			

		.producto, .txt
			display inline-block
			vertical-align middle
			

		.producto
			width 33%
			
		.txt
			width 60%